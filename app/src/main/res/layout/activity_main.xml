<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bem Vindo! Escolha a opção desejada abaixo."
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="34sp" />

    <Button
        android:id="@+id/buttonLocacao"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="LOCAÇÕES"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonCar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="cadastro de carros"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonBrand"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="CADASTRO DE MARCAS"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonCor"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="CADASTRO DE CORES"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_dark"
        android:text="Sair"
        android:textSize="20sp" />
</LinearLayout>